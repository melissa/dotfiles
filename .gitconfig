[user]
  name = Melissa Stone
  email = melissa@puppet.com

[gpg]
	program = gpg

[alias]
  br = branch
  cm = commit -S -s
  c = commit -S -s
  co = checkout
  df = diff
  g = grep -I
  lg = log --graph --pretty=oneline --abbrev-commit --decorate --pretty=format:'%C(yellow)%h%C(reset) %C(green)%G?%C(reset) %C(blue)%an%C(reset) %C(cyan)%cr%C(reset) %s %C(auto)%d%C(reset)' --graph --date-order
  loq = log --graph --all --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(bold white)â€” %an%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit --date=relative
  pb = publish-branch
  rb = rbranch
  rc = rank-contributors
  rv = review
  sm = show-merges
  st = status
  stat = status
  gerp = grep
  grap = grep
  dat = clone
  mah = checkout
  rekt = reset
  cp = cherry-pick
  blam = blame -M -C -C -w
  bl = blame -M -C -C -w
  club = clean -ffdx -e Gemfile.local -e .vscode -e .ruby-version
  wip = !sh -c 'git add -A . && git commit -m wip' -
  diffc = diff --cached
  fixup = !sh -c 'git commit --fixup=$1' -
  squash = !sh -c 'git commit --squash=$1' -
  ri = rebase --interactive --autosquash
  merge-topic = merge --no-ff
  fall = fetch --all
  recent = !git for-each-ref --color=always --sort=-committerdate refs/heads --format='%(HEAD)%(color:yellow)%(refname:short)|%(color:bold green)%(committerdate:relative)|%(color:blue)%(subject)|%(color:magenta)%(authorname)%(color:reset)' | column -ts'|' | cut -c -$(tput cols)

[push]
  default = nothing

[color]
  ui = true

[color "branch"]
  current = yellow reverse
  local   = yellow
  remote  = green

[core]
	excludesfile = /Users/melissa/.gitignore_global

[merge]
  tool = vimdiff
  conflictstyle = diff3

[filter "media"]
  required = true
  clean = git media clean %f
  smudge = git media smudge %f
