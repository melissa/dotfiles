  email = melissa@puppet.com
  signingkey = BAD5F0A392E98572

[commit]
  gpgsign = true

[gpg]
  program = gpg2

[alias]
  br = branch
  cm = commit -S -s
  c = commit -S -s
  commit = commit -S -s
  co = checkout
  df = diff
  g = grep -I
  lg = log --graph --pretty=oneline --abbrev-commit --decorate --pretty=format:'%C(yellow)%h%C(reset) %C(green)%G?%C(reset) %C(blue)%an%C(reset) %C(cyan)%cr%C(reset) %s %C(auto)%d%C(reset)' --graph --date-order
  loq = log --graph --all --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(bold white)â€” %an%C(reset)%C(bold yellow)%d%C(reset)' --abbrev-commit --date=relative
  pb = publish-branch
  rb = rbranch
  rc = rank-contributors
  rv = review
  sm = show-merges
  st = status
  stat = status
  gerp = grep
  grap = grep
  dat = clone
  mah = checkout
  rekt = reset
  cp = cherry-pick

[color]
  ui = true

[color "branch"]
  current = yellow reverse
  local   = yellow
  remote  = green

[core]
  editor = vim
  excludesfile = ~/.gitignore

[merge]
  tool = vimdiff
  conflictstyle = diff3

[filter "media"]
  required = true
  clean = git media clean %f
  smudge = git media smudge %f
